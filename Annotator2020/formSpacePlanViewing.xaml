<Window x:Class="Annotator2020.formSpacePlanViewing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Annotator2020"
        mc:Ignorable="d"
        Title="Space Plan Viewing and Annotation" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Rectangle Height="40" Stroke="Black" Fill="Gray" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <Label x:Name="lblRdySelection" Content="...Ready for your selection..." FontStyle="Italic" Foreground="GhostWhite" HorizontalAlignment="Left" Margin="44,7,0,0" VerticalAlignment="Top" Width="193"/>
        <Image x:Name="image" Source="Pictures/missingtexture.jpeg" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="54" Margin="1,1,0,0"/>
        <Button x:Name="btnClose" Content="Close" Foreground="GhostWhite" BorderBrush="Gray" Background="Gray" Margin="0,1,1,0" VerticalAlignment="Top" Height="38" Click="btnClose_Click" HorizontalAlignment="Right" Width="88"/>
        <Rectangle HorizontalAlignment="Left" Margin="10,44,0,10" Stroke="Black" Width="390"/>
    </Grid>
</Window>
